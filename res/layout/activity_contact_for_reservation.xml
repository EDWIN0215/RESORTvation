<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ContactForReservation">

    <ImageView
        android:id="@+id/imageViewbg"
        android:layout_width="500dp"
        android:layout_height="wrap_content"

        android:src="@drawable/page3bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:alpha="0.3"
        />


    <ImageView
        android:id="@+id/whitebox"
        android:layout_width="330dp"
        android:layout_height="690dp"
        android:src="@drawable/reservationstyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttoncolor"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/btn_bg_color"
        android:text="Wedding"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:fontFamily="sans-serif-light"
        android:text="Choose Reservation"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/whitebox" />

    <Button
        android:id="@+id/buttoncolor1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="Birthday"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor" />

    <Button
        android:id="@+id/buttoncolor2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="Christening"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor1"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor1"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor1" />

    <Button
        android:id="@+id/buttoncolor3"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn_bg_color"
        android:text="graduation party"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttoncolor2"
        app:layout_constraintStart_toStartOf="@+id/buttoncolor2"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor2" />

    <ImageView
        android:id="@+id/horizontalline"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontalline"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="sans-serif-light"
        android:text="Payment"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalline" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/visa"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/fname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/fname"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor3"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/lname"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttoncolor3"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/cardexpiration"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="MM/YY"
        android:inputType="text|datetime"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fname"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/CVC"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="CVC"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/cardnumber"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="Credit Card number"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:textColorHint="#fff"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardexpiration"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:backgroundTint="#92C4EE"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardnumber" />

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Proceed to confirm"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="135dp"
        android:backgroundTint="#92C4EE"
        android:textColor="#fff"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardnumber" />



</androidx.constraintlayout.widget.ConstraintLayout>